#pragma once
#include "warning-disable.hpp"
#include <cinttypes>
#include <string>
#include "warning-enable.hpp"

namespace tonplugins {
	struct version {
		uint16_t    major;
		uint16_t    minor;
		uint16_t    patch;
		uint16_t    tweak;
		std::string prerelease;
		std::string commit;

		std::string const to_string();

		bool operator==(const version& rhs);

		bool operator>(const version& rhs);
	};

	version get_version();
} // namespace tonplugins
